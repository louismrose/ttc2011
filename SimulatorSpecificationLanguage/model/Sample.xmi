<?xml version="1.0" encoding="ASCII"?>
<ssl:Specification xmi:version="2.0" xmlns:xmi="http://www.omg.org/XMI" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ssl="ssl" xsi:schemaLocation="ssl ssl.ecore">
  <testcases>
    <given>
      <conditions xsi:type="ssl:SetMode" mode="on"/>
    </given>
    <then>
      <observations xsi:type="ssl:ObserveBinding" button="TR" name="Mode"/>
    </then>
  </testcases>
  <testcases>
    <given>
      <conditions xsi:type="ssl:SetMode" mode="off"/>
    </given>
    <then>
      <observations xsi:type="ssl:ObserveBinding" button="TR" name="Mode"/>
    </then>
  </testcases>
  <testcases>
    <given>
      <conditions xsi:type="ssl:SetMode" mode="off"/>
    </given>
    <when>
      <actions xsi:type="ssl:PressButton" button="TR"/>
    </when>
    <then>
      <observations xsi:type="ssl:ObserveMode" mode="on"/>
      <observations xsi:type="ssl:ObserveDisplay" value="hello"/>
    </then>
  </testcases>
  <testcases>
    <given>
      <conditions xsi:type="ssl:SetMode" mode="on"/>
    </given>
    <when>
      <actions xsi:type="ssl:PressButton" button="TR"/>
    </when>
    <then>
      <observations xsi:type="ssl:ObserveMode" mode="off"/>
      <observations xsi:type="ssl:ObserveDisplay"/>
    </then>
  </testcases>
</ssl:Specification>
